{
  "manifest_version": 3,
  "name": "Scripture Verse Popup Preview ESV",
  "version": "1.2.0",
  "description": "Hover-select a Bible reference and see an instant ESV verse preview.",
  "icons": {
    "16":  "icon_16.png",
    "48":  "icon_48.png",
    "128": "icon_128.png"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "https://bible-api.com/*",
    "https://api.esv.org/*",
    "https://bibles.org/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Verse lookup"
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "content.js" ],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "options_page": "options.html"
}
