{
  "manifest_version": 3,
  "name": "Scripture Verse Popup Preview ESV",
  "version": "2.1.0",
  "description": "Verse preview on select. Copy to clipboard; open on Bible Gateway. Multi-translation. Privacy focused.",
  "icons": {
    "16":  "icon_16.png",
    "48":  "icon_48.png",
    "128": "icon_128.png"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "https://api.esv.org/*",
    "https://cdn.jsdelivr.net/*",
    "https://raw.githubusercontent.com/*",
    "https://api.scripture.api.bible/*",
    "https://bible-api.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Verse lookup"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "content.js" ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "bibles.json" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}
